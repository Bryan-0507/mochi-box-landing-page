---
interface Props {
  class?: string;
}
const { class: className } = Astro.props;
---
<svg class={className} viewBox="0 0 64 64" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <filter id="shadow-payment" x="-20%" y="-20%" width="140%" height="140%">
      <feDropShadow dx="1" dy="2" stdDeviation="1.5" flood-color="#F7C5CC" flood-opacity="0.7"/>
    </filter>
  </defs>
  <g filter="url(#shadow-payment)">
    <!-- Card -->
    <rect x="8" y="18" width="48" height="30" rx="6" fill="#BFA1D4" stroke="#fff" stroke-width="3"/>
    <!-- Chip -->
    <rect x="16" y="24" width="8" height="6" fill="#FDEE8A"/>
    <!-- Speed lines -->
    <line x1="4" y1="25" x2="12" y2="25" stroke="#F7C5CC" stroke-width="3" stroke-linecap="round"/>
    <line x1="2" y1="32" x2="10" y2="32" stroke="#F7C5CC" stroke-width="3" stroke-linecap="round"/>
  </g>
</svg>
