---
interface Props {
  class?: string;
}
const { class: className } = Astro.props;
---
<svg class={className} viewBox="0 0 64 64" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <filter id="shadow-matcha" x="-20%" y="-20%" width="140%" height="140%">
      <feDropShadow dx="1" dy="2" stdDeviation="1.5" flood-color="#F7C5CC" flood-opacity="0.7"/>
    </filter>
    <linearGradient id="cup-gradient" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" stop-color="#C8E6C9" />
      <stop offset="100%" stop-color="#A5D6A7" />
    </linearGradient>
    <linearGradient id="matcha-gradient" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" stop-color="#81C784" />
      <stop offset="100%" stop-color="#66BB6A" />
    </linearGradient>
  </defs>
  <g filter="url(#shadow-matcha)">
    <!-- Cup -->
    <path d="M 20 20 L 24 48 C 24 50 26 52 28 52 L 36 52 C 38 52 40 50 40 48 L 44 20 Z" 
          fill="url(#cup-gradient)" 
          stroke="#fff" 
          stroke-width="2"
          stroke-linejoin="round"/>
    
    <!-- Matcha -->
    <path d="M 22 24 L 42 24 C 42 24 40 40 32 40 C 24 40 22 24 22 24 Z" 
          fill="url(#matcha-gradient)" 
          stroke="#81C784" 
          stroke-width="1"
          stroke-linejoin="round"/>
    
    <!-- Steam -->
    <g class="steam">
      <path d="M 30 10 Q 28 8 30 6" stroke="#BDBDBD" stroke-width="1.5" fill="none" stroke-linecap="round" opacity="0.6">
        <animate attributeName="d" values="M 30 10 Q 28 8 30 6; M 30 10 Q 32 8 30 6; M 30 10 Q 28 8 30 6" dur="4s" repeatCount="indefinite"/>
      </path>
      <path d="M 36 12 Q 34 10 36 8" stroke="#BDBDBD" stroke-width="1.5" fill="none" stroke-linecap="round" opacity="0.6">
        <animate attributeName="d" values="M 36 12 Q 34 10 36 8; M 36 12 Q 38 10 36 8; M 36 12 Q 34 10 36 8" dur="4s" repeatCount="indefinite" begin="1s"/>
      </path>
    </g>
    
    <!-- Decorative elements -->
    <g class="animate-float" style="animation-duration: 5s">
      <circle cx="15" cy="15" r="2" fill="#A5D6A7" opacity="0.8">
        <animate attributeName="r" values="2;2.5;2" dur="4s" repeatCount="indefinite"/>
      </circle>
      <circle cx="50" cy="20" r="1.5" fill="#A5D6A7" opacity="0.8">
        <animate attributeName="r" values="1.5;2;1.5" dur="3.5s" repeatCount="indefinite" begin="0.3s"/>
      </circle>
    </g>
  </g>
</svg>

<style>
  .animate-float {
    animation: float 4s ease-in-out infinite;
  }
  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-5px); }
  }
  .steam {
    animation: steam-float 4s ease-in-out infinite;
  }
  @keyframes steam-float {
    0%, 100% { transform: translateY(0); opacity: 0.6; }
    50% { transform: translateY(-2px); opacity: 0.8; }
  }
</style>
