---
interface Props {
  class?: string;
}
const { class: className } = Astro.props;
---
<svg class={className} viewBox="0 0 64 64" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <filter id="shadow-eco" x="-20%" y="-20%" width="140%" height="140%">
      <feDropShadow dx="1" dy="2" stdDeviation="1.5" flood-color="#F7C5CC" flood-opacity="0.7"/>
    </filter>
    <linearGradient id="eco-gradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" stop-color="#A8E6CF" />
      <stop offset="100%" stop-color="#81C784" />
    </linearGradient>
  </defs>
  <g filter="url(#shadow-eco)" class="animate-float" style="animation-duration: 6s">
    <!-- Recycling arrows -->
    <g transform="translate(32, 32) rotate(-45)">
      <path d="M -12 0 L 0 -16 L 12 0 L 4 0 L 4 16 L -4 16 L -4 0 Z" 
            fill="url(#eco-gradient)" 
            stroke="#81C784" 
            stroke-width="1.5"
            stroke-linejoin="round"/>
      <path d="M 0 -16 L 16 -4 L 0 8" 
            fill="none" 
            stroke="#fff" 
            stroke-width="2" 
            stroke-linecap="round"
            stroke-linejoin="round"/>
    </g>
  </g>
  
  <!-- Decorative elements -->
  <g class="animate-float" style="animation-duration: 8s">
    <circle cx="15" cy="15" r="1" fill="#A8E6CF" opacity="0.8">
      <animate attributeName="r" values="1;1.3;1" dur="5s" repeatCount="indefinite"/>
    </circle>
    <circle cx="50" cy="50" r="0.8" fill="#81C784" opacity="0.8">
      <animate attributeName="r" values="0.8;1.1;0.8" dur="4s" repeatCount="indefinite" begin="0.3s"/>
    </circle>
  </g>
</svg>

<style>
  .animate-float {
    animation: float 6s ease-in-out infinite;
  }
  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-3px); }
  }
</style>
