---
interface Props {
  class?: string;
}
const { class: className } = Astro.props;
---
<svg class={className} viewBox="0 0 64 64" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <filter id="shadow-ramune" x="-20%" y="-20%" width="140%" height="140%">
      <feDropShadow dx="1" dy="2" stdDeviation="1.5" flood-color="#F7C5CC" flood-opacity="0.7"/>
    </filter>
    <linearGradient id="bottle-gradient" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" stop-color="#E3F2FD" />
      <stop offset="100%" stop-color="#BBDEFB" />
    </linearGradient>
    <linearGradient id="liquid-gradient" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" stop-color="#B3E5FC" />
      <stop offset="100%" stop-color="#81D4FA" />
    </linearGradient>
  </defs>
  <g filter="url(#shadow-ramune)">
    <!-- Bottle neck -->
    <rect x="24" y="10" width="16" height="10" rx="2" fill="url(#bottle-gradient)" stroke="#fff" stroke-width="2"/>
    
    <!-- Bottle top -->
    <rect x="26" y="8" width="12" height="2" rx="1" fill="#E0E0E0" stroke="#BDBDBD" stroke-width="1"/>
    
    <!-- Bottle body -->
    <path d="M 20 20 L 20 50 C 20 52 22 54 24 54 L 40 54 C 42 54 44 52 44 50 L 44 20 Z" 
          fill="url(#bottle-gradient)" 
          stroke="#fff" 
          stroke-width="2"/>
    
    <!-- Liquid -->
    <path d="M 20 30 C 20 30 24 28 32 28 C 40 28 44 30 44 30 L 44 50 C 44 52 42 54 40 54 L 24 54 C 22 54 20 52 20 50 Z" 
          fill="url(#liquid-gradient)" 
          stroke="#81D4FA" 
          stroke-width="1"/>
    
    <!-- Marble -->
    <circle cx="32" cy="30" r="4" fill="#fff" stroke="#E0E0E0" stroke-width="1">
      <animate attributeName="cy" values="30;28;30" dur="3s" repeatCount="indefinite"/>
      <animate attributeName="r" values="4;4.2;4" dur="4s" repeatCount="indefinite"/>
    </circle>
    
    <!-- Bubbles -->
    <g class="bubbles">
      <circle cx="28" cy="40" r="2" fill="#fff" opacity="0.8">
        <animate attributeName="cy" values="40;35;40" dur="3s" repeatCount="indefinite"/>
        <animate attributeName="r" values="2;2.2;2" dur="2s" repeatCount="indefinite"/>
      </circle>
      <circle cx="36" cy="45" r="1.5" fill="#fff" opacity="0.6">
        <animate attributeName="cy" values="45;40;45" dur="3.5s" repeatCount="indefinite" begin="0.2s"/>
        <animate attributeName="r" values="1.5;1.7;1.5" dur="2.5s" repeatCount="indefinite" begin="0.2s"/>
      </circle>
      <circle cx="25" cy="48" r="1" fill="#fff" opacity="0.4">
        <animate attributeName="cy" values="48;43;48" dur="4s" repeatCount="indefinite" begin="0.4s"/>
        <animate attributeName="r" values="1;1.2;1" dur="3s" repeatCount="indefinite" begin="0.4s"/>
      </circle>
    </g>
    
    <!-- Decorative elements -->
    <g class="animate-float" style="animation-duration: 5s">
      <circle cx="15" cy="15" r="1.5" fill="#B3E5FC" opacity="0.8">
        <animate attributeName="r" values="1.5;1.8;1.5" dur="4s" repeatCount="indefinite"/>
      </circle>
      <circle cx="50" cy="20" r="1" fill="#81D4FA" opacity="0.8">
        <animate attributeName="r" values="1;1.3;1" dur="3.5s" repeatCount="indefinite" begin="0.3s"/>
      </circle>
    </g>
  </g>
</svg>

<style>
  .animate-float {
    animation: float 5s ease-in-out infinite;
  }
  @keyframes float {
    0%, 100% { transform: translate(0, 0); }
    25% { transform: translate(1px, -1px); }
    50% { transform: translate(-1px, 1px); }
    75% { transform: translate(2px, -1px); }
  }
  .bubbles {
    animation: bubble-float 6s ease-in-out infinite;
  }
  @keyframes bubble-float {
    0%, 100% { transform: translateX(0); }
    50% { transform: translateX(2px); }
  }
</style>
