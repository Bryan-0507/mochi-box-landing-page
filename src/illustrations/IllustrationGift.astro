---
interface Props {
  class?: string;
}
const { class: className } = Astro.props;
---
<svg class={className} viewBox="0 0 64 64" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <filter id="shadow-gift" x="-20%" y="-20%" width="140%" height="140%">
      <feDropShadow dx="1" dy="2" stdDeviation="1.5" flood-color="#F7C5CC" flood-opacity="0.7"/>
    </filter>
  </defs>
  <g filter="url(#shadow-gift)">
    <!-- Ribbon -->
    <rect x="22" y="15" width="4" height="30" fill="#F7C5CC" rx="2"/>
    <rect x="38" y="15" width="4" height="30" fill="#F7C5CC" rx="2"/>
    <rect x="15" y="22" width="34" height="4" fill="#F7C5CC" rx="2"/>
    
    <!-- Box -->
    <rect x="12" y="20" width="40" height="30" fill="#BFA1D4" stroke="#fff" stroke-width="3" rx="4"/>
    <rect x="12" y="35" width="40" height="3" fill="#9D7DBD"/>
    
    <!-- Bow -->
    <path d="M 32 15 C 32 15, 28 8, 22 10 C 25 12, 24 16, 26 18" fill="none" stroke="#F7C5CC" stroke-width="2" stroke-linecap="round"/>
    <path d="M 32 15 C 32 15, 36 8, 42 10 C 39 12, 40 16, 38 18" fill="none" stroke="#F7C5CC" stroke-width="2" stroke-linecap="round"/>
    <circle cx="32" cy="15" r="4" fill="#F7C5CC"/>
  </g>
</svg>
