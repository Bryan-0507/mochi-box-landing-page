---
interface Props {
  class?: string;
}
const { class: className } = Astro.props;
---
<svg class={className} viewBox="0 0 64 64" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <filter id="shadow-coffee" x="-20%" y="-20%" width="140%" height="140%">
      <feDropShadow dx="1" dy="2" stdDeviation="1.5" flood-color="#F7C5CC" flood-opacity="0.7"/>
    </filter>
    <linearGradient id="cup-gradient" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" stop-color="#E3F2FD" />
      <stop offset="100%" stop-color="#BBDEFB" />
    </linearGradient>
    <linearGradient id="coffee-gradient" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" stop-color="#8D6E63" />
      <stop offset="100%" stop-color="#5D4037" />
    </linearGradient>
    <linearGradient id="ice-gradient" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" stop-color="#E3F2FD" />
      <stop offset="100%" stop-color="#BBDEFB" stop-opacity="0.8" />
    </linearGradient>
  </defs>
  <g filter="url(#shadow-coffee)">
    <!-- Cup -->
    <path d="M 20 20 L 24 48 C 24 50 26 52 28 52 L 36 52 C 38 52 40 50 40 48 L 44 20 Z" 
          fill="url(#cup-gradient)" 
          stroke="#fff" 
          stroke-width="2"
          stroke-linejoin="round"/>
    
    <!-- Coffee -->
    <path d="M 22 24 L 42 24 C 42 24 40 40 32 40 C 24 40 22 24 22 24 Z" 
          fill="url(#coffee-gradient)" 
          stroke="#5D4037" 
          stroke-width="1"
          stroke-linejoin="round"/>
    
    <!-- Ice cubes -->
    <g class="ice-cubes">
      <rect x="26" y="28" width="6" height="6" rx="1" fill="url(#ice-gradient)" stroke="#fff" stroke-width="1">
        <animate attributeName="opacity" values="0.8;0.9;0.8" dur="3s" repeatCount="indefinite"/>
      </rect>
      <rect x="34" y="30" width="4" height="4" rx="1" fill="url(#ice-gradient)" stroke="#fff" stroke-width="1">
        <animate attributeName="opacity" values="0.7;0.9;0.7" dur="3.5s" repeatCount="indefinite" begin="0.3s"/>
      </rect>
      <rect x="28" y="34" width="5" height="5" rx="1" fill="url(#ice-gradient)" stroke="#fff" stroke-width="1">
        <animate attributeName="opacity" values="0.8;0.95;0.8" dur="3.2s" repeatCount="indefinite" begin="0.5s"/>
      </rect>
    </g>
    
    <!-- Face -->
    <g transform="translate(24, 28)" class="animate-float" style="animation-duration: 4s">
      <circle cx="4" cy="0" r="1.5" fill="#fff">
        <animate attributeName="r" values="1.5;1.3;1.5" dur="3s" repeatCount="indefinite"/>
      </circle>
      <circle cx="12" cy="0" r="1.5" fill="#fff">
        <animate attributeName="r" values="1.5;1.3;1.5" dur="3s" repeatCount="indefinite" begin="0.5s"/>
      </circle>
      <path d="M 4 5 Q 8 7 12 5" stroke="#fff" stroke-width="1.5" fill="none" stroke-linecap="round" class="animate-smile"/>
    </g>
    
    <!-- Condensation -->
    <g class="condensation">
      <path d="M 22 30 Q 20 32 22 34" stroke="#E3F2FD" stroke-width="1.5" fill="none" stroke-linecap="round" opacity="0.7">
        <animate attributeName="d" values="M 22 30 Q 20 32 22 34; M 22 30 Q 20 31 22 33; M 22 30 Q 20 32 22 34" dur="4s" repeatCount="indefinite"/>
      </path>
      <path d="M 42 32 Q 44 34 42 36" stroke="#E3F2FD" stroke-width="1.5" fill="none" stroke-linecap="round" opacity="0.5">
        <animate attributeName="d" values="M 42 32 Q 44 34 42 36; M 42 32 Q 44 33 42 35; M 42 32 Q 44 34 42 36" dur="5s" repeatCount="indefinite" begin="0.5s"/>
      </path>
    </g>
    
    <!-- Decorative elements -->
    <g class="animate-float" style="animation-duration: 5s">
      <circle cx="15" cy="15" r="1.5" fill="#8D6E63" opacity="0.8">
        <animate attributeName="r" values="1.5;1.8;1.5" dur="4s" repeatCount="indefinite"/>
      </circle>
      <circle cx="50" cy="20" r="1" fill="#5D4037" opacity="0.8">
        <animate attributeName="r" values="1;1.3;1" dur="3.5s" repeatCount="indefinite" begin="0.3s"/>
      </circle>
    </g>
  </g>
</svg>

<style>
  .animate-float {
    animation: float 5s ease-in-out infinite;
  }
  @keyframes float {
    0%, 100% { transform: translate(0, 0); }
    25% { transform: translate(1px, -1px); }
    50% { transform: translate(-1px, 1px); }
    75% { transform: translate(2px, -1px); }
  }
  .animate-smile {
    animation: smile 4s ease-in-out infinite;
  }
  @keyframes smile {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.1); }
  }
  .ice-cubes {
    animation: ice-float 6s ease-in-out infinite;
  }
  @keyframes ice-float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-1px); }
  }
  .condensation {
    animation: condense 5s ease-in-out infinite;
  }
  @keyframes condense {
    0%, 100% { opacity: 0.7; }
    50% { opacity: 0.9; }
  }
</style>
