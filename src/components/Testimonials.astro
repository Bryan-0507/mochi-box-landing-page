---
const testimonials = [
  {
    quote: "Se ve increíble y sabe mejor.",
    author: "María G.",
    role: "Estudiante UFM"
  },
  {
    quote: "Perfecto para el break entre clases.",
    author: "Carlos R.",
    role: "Profesional Zona 10"
  },
  {
    quote: "Amo las ediciones limitadas.",
    author: "Ana L.",
    role: "Foodie apasionada"
  }
];
---

<section class="py-16 md:py-24 bg-gradient-to-br from-sakura/10 via-white to-matcha/10">
  <div class="container px-4">
    <div class="text-center mb-12 md:mb-16">
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-display font-bold text-carbon mb-4">
        Lo que dicen nuestros <span class="text-vermillion">clientes</span>
      </h2>
      <div class="flex items-center justify-center gap-2 mb-2">
        <div class="flex gap-1 text-2xl">
          <span class="text-vermillion">★</span>
          <span class="text-vermillion">★</span>
          <span class="text-vermillion">★</span>
          <span class="text-vermillion">★</span>
          <span class="text-vermillion">★</span>
        </div>
        <span class="text-lg font-semibold text-carbon">4.8/5</span>
      </div>
      <p class="text-carbon/60 text-sm">Basado en más de 500 reseñas</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 max-w-5xl mx-auto">
      {testimonials.map((testimonial) => (
        <div class="bg-white rounded-mochibox-lg p-8 shadow-md hover:shadow-xl transition-all duration-300 border-2 border-carbon/5 hover:border-sakura/50">
          <div class="mb-4">
            <div class="flex gap-1 text-vermillion text-xl mb-3">
              <span>★</span>
              <span>★</span>
              <span>★</span>
              <span>★</span>
              <span>★</span>
            </div>
            <p class="text-lg text-carbon italic leading-relaxed">
              "{testimonial.quote}"
            </p>
          </div>
          <div class="border-t border-carbon/10 pt-4">
            <p class="font-semibold text-carbon">{testimonial.author}</p>
            <p class="text-sm text-carbon/60">{testimonial.role}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
