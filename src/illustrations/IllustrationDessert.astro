---
interface Props {
  class?: string;
}
const { class: className } = Astro.props;
---
<svg class={className} viewBox="0 0 64 64" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <filter id="shadow-dessert" x="-20%" y="-20%" width="140%" height="140%">
      <feDropShadow dx="1" dy="2" stdDeviation="1.5" flood-color="#F7C5CC" flood-opacity="0.7"/>
    </filter>
  </defs>
  <g filter="url(#shadow-dessert)">
    <!-- Dango -->
    <g transform="translate(5, 10)">
      <line x1="10" y1="35" x2="10" y2="5" stroke="#D2B48C" stroke-width="3" stroke-linecap="round"/>
      <circle cx="10" cy="12" r="7" fill="#fff" stroke="#F7C5CC" stroke-width="2.5"/>
      <circle cx="10" cy="25" r="7" fill="#90EE90" stroke="#fff" stroke-width="2.5"/>
      <circle cx="10" cy="38" r="7" fill="#fff" stroke="#F7C5CC" stroke-width="2.5"/>
    </g>
    <!-- Ramune -->
    <g transform="translate(25, 5)">
      <path d="M 10 50 L 10 20 Q 10 10, 20 10 Q 30 10, 30 20 L 30 50 Z" fill="#BCE2F6" stroke="#87CEEB" stroke-width="3"/>
      <circle cx="20" cy="25" r="4" fill="#fff"/>
      <rect x="10" y="5" width="20" height="8" fill="#87CEEB" rx="2"/>
    </g>
  </g>
</svg>
