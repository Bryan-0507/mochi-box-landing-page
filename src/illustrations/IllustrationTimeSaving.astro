---
interface Props {
  class?: string;
}
const { class: className } = Astro.props;
---
<svg class={className} viewBox="0 0 128 128" fill="none" xmlns="http://www.w3.org/2000/svg">
  <!-- Background circle -->
  <circle cx="64" cy="64" r="60" fill="#FFE6ED"/>
  
  <!-- Clock body -->
  <circle cx="64" cy="64" r="40" fill="#FFB6C1"/>
  <circle cx="64" cy="64" r="36" fill="white"/>
  
  <!-- Clock face -->
  <circle cx="64" cy="64" r="4" fill="#333"/>
  
  <!-- Clock hands -->
  <path d="M64 40L64 64L52 76" stroke="#333" stroke-width="3" stroke-linecap="round"/>
  <path d="M64 40L64 52" stroke="#FF6B8B" stroke-width="4" stroke-linecap="round"/>
  
  <!-- Clock decorations -->
  <circle cx="64" cy="34" r="2" fill="#333"/>
  <circle cx="82" cy="46" r="2" fill="#333"/>
  <circle cx="82" cy="82" r="2" fill="#333"/>
  <circle cx="64" cy="94" r="2" fill="#333"/>
  <circle cx="46" cy="82" r="2" fill="#333"/>
  <circle cx="46" cy="46" r="2" fill="#333"/>
  
  <!-- Cute desserts around the clock -->
  <circle cx="50" cy="50" r="8" fill="#FF9EBB"/>
  <circle cx="78" cy="50" r="6" fill="#B5EAD7"/>
  <circle cx="50" cy="78" r="6" fill="#C7CEEA"/>
  <circle cx="78" cy="78" r="8" fill="#FFD1DC"/>
  
  <!-- Sparkles -->
  <path d="M30 40L32 42L34 40L32 38L30 40Z" fill="#FFD700"/>
  <path d="M100 90L102 92L104 90L102 88L100 90Z" fill="#FFD700"/>
  <path d="M40 100L42 102L44 100L42 98L40 100Z" fill="#FFD700"/>
</svg>
