---
interface Props {
  class?: string;
}
const { class: className } = Astro.props;
---
<svg class={className} viewBox="0 0 64 64" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <filter id="shadow-payment-step" x="-20%" y="-20%" width="140%" height="140%">
      <feDropShadow dx="1" dy="2" stdDeviation="1.5" flood-color="#F7C5CC" flood-opacity="0.7"/>
    </filter>
    <radialGradient id="screen-glow" cx="50%" cy="50%" r="50%" fx="30%" fy="30%">
      <stop offset="0%" stop-color="#E1F5FE" />
      <stop offset="100%" stop-color="#B3E5FC" />
    </radialGradient>
  </defs>
  <g filter="url(#shadow-payment-step)">
    <!-- Terminal -->
    <rect x="10" y="14" width="44" height="36" rx="4" fill="#F5F5F5" stroke="#BFA1D4" stroke-width="3"/>
    <rect x="14" y="18" width="36" height="16" rx="2" fill="url(#screen-glow)" stroke="#BFA1D4" stroke-width="1"/>
    
    <!-- Card -->
    <rect x="18" y="38" width="28" height="18" rx="3" fill="#BFA1D4" stroke="#fff" stroke-width="2"/>
    <rect x="22" y="42" width="8" height="6" fill="#FDEE8A"/>
    
    <!-- Waves -->
    <path d="M 18 44 L 18 48" stroke="#fff" stroke-width="2" stroke-linecap="round" class="animate-wave"/>
    <path d="M 18 50 L 18 54" stroke="#fff" stroke-width="2" stroke-linecap="round" class="animate-wave" style="animation-delay: 0.2s"/>
    
    <!-- Face -->
    <g transform="translate(40, 45)">
      <circle cx="0" cy="0" r="1.5" fill="#4A4A4A"/>
      <circle cx="6" cy="0" r="1.5" fill="#4A4A4A"/>
      <path d="M 0 4 Q 3 6 6 4" stroke="#4A4A4A" stroke-width="1.5" fill="none" stroke-linecap="round"/>
    </g>
  </g>
</svg>

<style>
  .animate-wave {
    animation: wave 1.5s ease-in-out infinite;
    opacity: 0;
  }
  @keyframes wave {
    0%, 100% { opacity: 0.2; }
    50% { opacity: 1; }
  }
</style>
