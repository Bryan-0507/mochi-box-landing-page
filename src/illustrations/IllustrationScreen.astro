---
interface Props {
  class?: string;
}
const { class: className } = Astro.props;
---
<svg class={className} viewBox="0 0 64 64" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <filter id="shadow-screen" x="-20%" y="-20%" width="140%" height="140%">
      <feDropShadow dx="1" dy="2" stdDeviation="1.5" flood-color="#F7C5CC" flood-opacity="0.7"/>
    </filter>
  </defs>
  <g filter="url(#shadow-screen)">
    <!-- Screen -->
    <rect x="10" y="10" width="44" height="34" rx="4" fill="#F0F0F0" stroke="#BFA1D4" stroke-width="3"/>
    <rect x="14" y="14" width="36" height="26" rx="2" fill="#fff" stroke="#BFA1D4" stroke-width="1"/>
    
    <!-- App icons -->
    <rect x="20" y="20" width="8" height="8" rx="1" fill="#F7C5CC"/>
    <rect x="32" y="20" width="8" height="8" rx="1" fill="#BFA1D4"/>
    <rect x="44" y="20" width="8" height="8" rx="1" fill="#A8E6CF"/>
    <rect x="20" y="32" width="8" height="8" rx="1" fill="#FFD3B6"/>
    <rect x="32" y="32" width="8" height="8" rx="1" fill="#DCE2AA"/>
    
    <!-- Cursor -->
    <g transform="translate(0, 0)" class="animate-float">
      <path d="M 50 30 L 54 26 L 58 34 L 56 35 Z" fill="#fff"/>
      <path d="M 50 30 L 54 26 L 58 34 L 56 35 Z" fill="none" stroke="#4A4A4A" stroke-width="1.5" stroke-linejoin="round"/>
    </g>
  </g>
</svg>

<style>
  .animate-float {
    animation: float 3s ease-in-out infinite;
  }
  @keyframes float {
    0%, 100% { transform: translate(0, 0); }
    50% { transform: translate(-2px, -3px); }
  }
</style>
