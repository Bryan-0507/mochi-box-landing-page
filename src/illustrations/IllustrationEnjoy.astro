---
interface Props {
  class?: string;
}
const { class: className } = Astro.props;
---
<svg class={className} viewBox="0 0 64 64" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <filter id="shadow-enjoy" x="-20%" y="-20%" width="140%" height="140%">
      <feDropShadow dx="1" dy="2" stdDeviation="1.5" flood-color="#F7C5CC" flood-opacity="0.7"/>
    </filter>
    <radialGradient id="face-glow" cx="50%" cy="50%" r="50%" fx="30%" fy="30%">
      <stop offset="0%" stop-color="#FFF9C4" />
      <stop offset="100%" stop-color="#FFF59D" />
    </radialGradient>
  </defs>
  <g filter="url(#shadow-enjoy)">
    <!-- Face -->
    <circle cx="32" cy="32" r="24" fill="url(#face-glow)" stroke="#F7C5CC" stroke-width="3"/>
    
    <!-- Eyes -->
    <circle cx="22" cy="28" r="3" fill="#4A4A4A">
      <animate attributeName="r" values="3;2.5;3" dur="3s" repeatCount="indefinite"/>
    </circle>
    <circle cx="42" cy="28" r="3" fill="#4A4A4A">
      <animate attributeName="r" values="3;2.5;3" dur="3s" repeatCount="indefinite" begin="0.5s"/>
    </circle>
    
    <!-- Mouth -->
    <path d="M 24 40 Q 32 48 40 40" fill="none" stroke="#4A4A4A" stroke-width="3" stroke-linecap="round"/>
    
    <!-- Food -->
    <g class="animate-float" style="animation-duration: 4s">
      <circle cx="15" cy="15" r="4" fill="#F7C5CC" stroke="#fff" stroke-width="1.5"/>
      <circle cx="49" cy="15" r="5" fill="#A8E6CF" stroke="#fff" stroke-width="1.5">
        <animate attributeName="r" values="5;4.5;5" dur="3s" repeatCount="indefinite"/>
      </circle>
      <circle cx="10" cy="10" r="3" fill="#FFD3B6" stroke="#fff" stroke-width="1.5">
        <animate attributeName="r" values="3;2.5;3" dur="3.5s" repeatCount="indefinite"/>
      </circle>
    </g>
  </g>
</svg>

<style>
  .animate-float {
    animation: float 4s ease-in-out infinite;
  }
  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-5px); }
  }
</style>
