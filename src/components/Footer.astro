<footer class="relative overflow-hidden py-12 bg-gradient-to-b from-rose-50 to-white border-t border-rose-100">
  <!-- Decorative elements -->
  <div class="absolute -top-10 -left-10 w-32 h-32 bg-vermillion/5 rounded-full mix-blend-multiply filter blur-xl opacity-70"></div>
  <div class="absolute -bottom-20 -right-20 w-40 h-40 bg-rose-200/30 rounded-full mix-blend-multiply filter blur-xl opacity-70"></div>
  
  <div class="container relative z-10">
    <div class="max-w-3xl mx-auto text-center">      
      <!-- Main text with subtle animation -->
      <p class="mt-4 font-semibold text-carbon/90 text-lg">
        Postres y bebidas japonesas 24/7
      </p>
      
      <!-- Copyright with hover effect -->
      <p class="text-sm text-carbon/70">
        2025 Mochibox. Todos los derechos reservados.
      </p>
      
      <!-- Subtle divider -->
      <div class="w-24 h-px bg-gradient-to-r from-transparent via-rose-300 to-transparent mx-auto my-6"></div>
      
    </div>
  </div>
</footer>

<style>
  /* Smooth scrolling for anchor links */
  html {
    scroll-behavior: smooth;
  }
  
  /* Subtle pulse animation for the mochi icon */
  @keyframes pulse-soft {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.05); }
  }
  
  /* Apply animation on hover */
  .group:hover .group-hover\:animate-pulse-soft {
    animation: pulse-soft 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }
  
  /* Custom selection color */
  ::selection {
    background-color: rgba(220, 38, 38, 0.2);
  }
</style>
