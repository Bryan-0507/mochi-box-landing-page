---
interface Props {
  class?: string;
}
const { class: className } = Astro.props;
---
<svg class={className} viewBox="0 0 64 64" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <filter id="shadow-clock" x="-20%" y="-20%" width="140%" height="140%">
      <feDropShadow dx="1" dy="2" stdDeviation="1.5" flood-color="#F7C5CC" flood-opacity="0.7"/>
    </filter>
    <linearGradient id="clock-gradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" stop-color="#F7C5CC" />
      <stop offset="100%" stop-color="#F8BBD0" />
    </linearGradient>
  </defs>
  <g filter="url(#shadow-clock)">
    <!-- Clock Body -->
    <circle cx="32" cy="32" r="24" fill="url(#clock-gradient)" stroke="#fff" stroke-width="3"/>
    
    <!-- Clock center -->
    <circle cx="32" cy="32" r="2" fill="#4A4A4A"/>
    
    <!-- Hour marks -->
    <line x1="32" y1="10" x2="32" y2="14" stroke="#fff" stroke-width="2" stroke-linecap="round"/>
    <line x1="54" y1="32" x2="50" y2="32" stroke="#fff" stroke-width="2" stroke-linecap="round"/>
    <line x1="32" y1="54" x2="32" y2="50" stroke="#fff" stroke-width="2" stroke-linecap="round"/>
    <line x1="10" y1="32" x2="14" y2="32" stroke="#fff" stroke-width="2" stroke-linecap="round"/>
    
    <!-- Clock hands -->
    <line x1="32" y1="32" x2="32" y2="16" stroke="#4A4A4A" stroke-width="2.5" stroke-linecap="round">
      <animateTransform
        attributeName="transform"
        attributeType="XML"
        type="rotate"
        from="0 32 32"
        to="360 32 32"
        dur="12s"
        repeatCount="indefinite"/>
    </line>
    <line x1="32" y1="32" x2="46" y2="32" stroke="#4A4A4A" stroke-width="2" stroke-linecap="round">
      <animateTransform
        attributeName="transform"
        attributeType="XML"
        type="rotate"
        from="0 32 32"
        to="360 32 32"
        dur="60s"
        repeatCount="indefinite"/>
    </line>
  </g>
  
  <!-- Decorative elements -->
  <g class="animate-float" style="animation-duration: 5s">
    <circle cx="15" cy="15" r="1.5" fill="#F8BBD0" opacity="0.8">
      <animate attributeName="r" values="1.5;1.8;1.5" dur="4s" repeatCount="indefinite"/>
    </circle>
    <circle cx="50" cy="20" r="1" fill="#F8BBD0" opacity="0.8">
      <animate attributeName="r" values="1;1.3;1" dur="3.5s" repeatCount="indefinite" begin="0.3s"/>
    </circle>
  </g>
</svg>

<style>
  .animate-float {
    animation: float 5s ease-in-out infinite;
  }
  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-5px); }
  }
</style>
